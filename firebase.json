{
  "hosting": {
    "public": "public/export",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "public/export"
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": "5001"
    },
    "firestore": {
      "port": "8080"
    },
    "hosting": {
      "port": "5000"
    }
  }
}
